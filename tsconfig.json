{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}